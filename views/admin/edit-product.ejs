<%- include('../layouts/adminheader.ejs') %>
    <div class="fluid-container">
        
        <div class="card mb-4 container mt-5">
            <h5 class="card-header text-center">Product Edit Form</h5>
            <form action="/admin/update-product?id=<%= product._id %>" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <input type="hidden" name="id" value="<%=product._id %>">
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Product name</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" name="productName" id="html5-text-input" value="<%=product.productName %>"/>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Price</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" name="price" id="html5-text-input" value="<%=product.price %>"/>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="exampleFormControlSelect1" class="col-form-label col-md-2">Stock</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" name="stock" id="html5-text-input" value="<%=product.stock %>"/>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="exampleFormControlSelect1" class="col-form-label col-md-2">Category</label>
                        <div class="col-md-10">
                            <select class="form-select" id="exampleFormControlSelect1"
                                aria-label="Default select example" name="category">
                                <option selected><%=product.category %></option>
                                <option value="">One</option>
                                
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        
                        <label for="formFile" class="col-form-label col-md-2">Image upload</label>

                        <div class="col-md-10">
                            <input class="form-control" type="file" id="formFile"  name="image" value="" multiple/>

                            <% product.image.forEach(image => {%>
                            <img src="/product-img/<%= image %>" width="60px" alt="">
                            <a href="/admin/delete-img/?id=<%= image %>" class="btn btn-primary btn-sm">delete</a>
                            <% }); %>
                        </div>

                        
                    </div>

                    <div class="mb-3 row">
                        <label for="exampleFormControlTextarea1" class="col-form-label col-md-2">Description</label>
                        <div class="col-md-10">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"><%=product.description %></textarea>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <% if(typeof message!='undefined' ){ %>

                            <p style="color: rgb(160, 20, 10);">
                                <%= message %>
                            </p>

                            <% } %>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('../layouts/adminfooter.ejs') %>