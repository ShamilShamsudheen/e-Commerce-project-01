<%- include('../layouts/adminheader.ejs') %>


    <div class="fluid-container">
        
        <div class="card mb-4 container mt-5">
            <h5 class="card-header text-center">Banner Edit Form</h5>
            <form action="" method="post" enctype="multipart/form-data">
                <input type="text" value="<%= bannerData._id %>" name="id" hidden>
                <div class="card-body">
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Heading</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" name="heading" id="html5-text-input" value="<%= bannerData.heading %>"/>
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Sub title</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" name="subTitle" id="html5-text-input" value="<%= bannerData.subtitle %>"/>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">Status</label>
                        <div class="col-md-10 row">
                            <div class="form-check col-md-4">
                                <input
                                  name="status"
                                  class="form-check-input"
                                  type="radio"
                                  value="Active"
                                  id="defaultRadio1"
                                />
                                <label class="form-check-label" for="defaultRadio1"> Active </label>
                            </div>
                            <div class="form-check col-md-5">
                                <input
                                  name="status"
                                  class="form-check-input"
                                  type="radio"
                                  value="Inactive"
                                  id="defaultRadio1"
                                />
                                <label class="form-check-label" for="defaultRadio1"> In-Active </label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">button text</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" name="btnTxt" id="html5-text-input" value="<%= bannerData.btnText %>"/>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label for="html5-text-input" class="col-md-2 col-form-label">button link</label>
                        <div class="col-md-10">
                            <input class="form-control" type="text" name="btnLink" id="html5-text-input" value="<%= bannerData.btnLink %>"/>
                        </div>
                    </div>
                    <img src="/bannerImage/<%= bannerData.image %>" alt="" width="100px">
                    <div class="mb-3 row">
                        <label for="formFile" class="col-form-label col-md-2">image upload</label>
                        <div class="col-md-10">
                            <input class="form-control" type="file" id="formFile"  name="image" />
                        </div>
                    </div>
                    
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    

<%- include('../layouts/adminfooter.ejs') %>