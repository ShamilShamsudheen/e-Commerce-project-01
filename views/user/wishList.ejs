<%- include('../layouts/homeheader.ejs') %>
<div class="div" style="height: 10rem"></div>
<section class="container">
  <% if(userCart.products.length!==0){%>

  
    <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">Product Details</th>
            <th scope="col">action</th>
          </tr>
        </thead>
        <tbody>
            <% wishList.forEach((wish) => {%>
          <tr>
            <td  class="text-center"><img src="/product-img/<%= wish.productId.image[0] %> " alt="" width="70rem"></td>
             <td>
                <%= wish.productId.productName %> <br>
                Rs.<%= wish.productId.price %> <br>
                <%= wish.productId.description %> 
            </td>
            <td>
              <a href="/moveToCart/?id=<%= wish.productId._id %>" class="btn btn-primary">cart</a>
              <a  onclick="removeProduct('<%= wish.productId._id %>')"><i><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
              </svg></i></a>
            </td>
           
          </tr>
          <%}); %>
        </tbody>
      </table>
      <%}else{%>
        <div class="d-flex justify-content-between align-items-center mb-4">
            
        </div>

        <div class="card rounded-3 mb-4 bg-transparent border-0">
          <div class="card-body p-4 bg-transparent">

            <div class="row">
              <div class="col-md-12  d-flex flex-column justify-content-center align-items-center">
                <img src="/assets/images/empty-cart.png" alt="empty image" width="30%">
                <h3 class="fw-normal text-black mb-3">Your wishlist is Empty</h3>
                <a type="button" href="/products" class="btn btn-warning ">back to shopping</a>
              </div>
            </div>


          </div>
        </div>




         



    </div>
      <%} %>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

function removeProduct(wishId1){
  console.log('ugyuguyg')
  const wishId = wishId1
  Swal.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
   location.href = '/deleteWishlist/?id='+ wishId
  }
})

}
</script>

